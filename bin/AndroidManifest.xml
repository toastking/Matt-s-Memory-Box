<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="delsig.android.mattsmemorybox2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="delsig.android.mattsmemorybox2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="delsig.android.mattsmemorybox2.DetailActivity"
            android:label="@string/detail_name" 
            android:parentActivityName="delsig.android.mattsmemorybox2.MainActivity"
          android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.MainActivity"
                android:value="delsig.android.mattsmemorybox2.MainActivity"
                />
        	</activity>
        	
    </application>

</manifest>
